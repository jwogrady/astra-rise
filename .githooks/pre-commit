#!/bin/bash
# Pre-commit Hook: Run PHPCS Linting
# 
# This hook runs PHP Code Sniffer (PHPCS) against staged PHP files
# before allowing a commit. If PHPCS finds errors, the commit is aborted.
#
# Install this hook:
#   cp .githooks/pre-commit .git/hooks/pre-commit
#   chmod +x .git/hooks/pre-commit
#
# Or configure Git to use this directory:
#   git config core.hooksPath .githooks

# Exit on any error
set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if phpcs is available
if ! command -v phpcs &> /dev/null; then
    echo -e "${YELLOW}Warning: phpcs not found. Skipping linting.${NC}"
    echo "Install with: npm install"
    exit 0
fi

# Get list of staged PHP files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.php$' || true)

if [ -z "$STAGED_FILES" ]; then
    exit 0
fi

echo -e "${YELLOW}Running PHPCS on staged files...${NC}"

# Run PHPCS on staged files
if phpcs --standard=phpcs.xml $STAGED_FILES; then
    echo -e "${GREEN}✓ PHPCS passed${NC}"
    exit 0
else
    echo -e "${RED}✗ PHPCS failed${NC}"
    echo -e "${YELLOW}Fix errors with: npm run lint:fix${NC}"
    exit 1
fi
