{
  "name": "jwogrady/astra-rise",
  "description": "Modern, modular Astra child theme with Spectra integration",
  "type": "wordpress-theme",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "jwogrady",
      "homepage": "https://github.com/jwogrady"
    }
  ],
  "keywords": [
    "astra",
    "astra-child",
    "spectra",
    "wordpress",
    "gutenberg",
    "theme"
  ],
  "homepage": "https://github.com/jwogrady/astra-rise",
  "support": {
    "issues": "https://github.com/jwogrady/astra-rise/issues"
  },
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.1"
  },
  "scripts": {
    "lint": "phpcs --standard=phpcs.xml inc/ functions.php",
    "lint:fix": "phpcbf --standard=phpcs.xml inc/ functions.php",
    "post-install-cmd": [
      "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
    ],
    "post-update-cmd": [
      "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "minimum-stability": "stable"
}
