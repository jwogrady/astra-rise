<?xml version="1.0"?>
<ruleset name="Astra Rise Theme">
	<description>WordPress Coding Standards for Astra Rise Theme</description>

	<!-- Check all PHP files in the theme -->
	<arg name="extensions" value="php"/>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/.git/*</exclude-pattern>

	<!-- Show progress -->
	<arg value="sp"/>

	<!-- Base standards -->
	<rule ref="PSR2"/>
	<rule ref="PSR12"/>

	<!-- WordPress specific naming -->
	<rule ref="WordPress.NamingConventions.ValidFunctionName"/>
	<rule ref="WordPress.NamingConventions.ValidVariableName"/>

	<!-- Text domain checks -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" value="astra-rise"/>
		</properties>
	</rule>

	<!-- Minimum supported versions -->
	<config name="minimum_supported_wp_version" value="6.8"/>
	<config name="testVersion" value="7.4-"/>

</ruleset>

